<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_100sdp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        >
        <com.example.weatherapp.widget.CustomTextviewMedium
            android:id="@+id/tv_rain_percent"
            style="@style/TextMiniStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="51%"
            android:textSize="@dimen/_12ssp"/>

        <ImageView
            android:id="@+id/img_rain"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/rain_ico_0"
            android:layout_marginVertical="@dimen/_8sdp"
            />
            <com.example.weatherapp.widget.CustomTextviewLight
                android:id="@+id/tv_part"
                style="@style/TextMiniStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Early"
                android:textSize="@dimen/_10ssp"

        />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="@dimen/_20sdp"
        android:background="@drawable/line_vertical"/>



</RelativeLayout>