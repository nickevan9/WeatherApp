<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_4sdp">

    <LinearLayout
        android:id="@+id/linearDaily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.example.weatherapp.widget.CustomTextviewMedium
            android:id="@+id/tv_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp" />


        <ImageView
            android:id="@+id/imgPbDaily"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@drawable/line_custom" />


        <com.example.weatherapp.widget.CustomTextviewMedium
            android:id="@+id/tv_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <!--    <com.airbnb.lottie.LottieAnimationView-->
    <!--        android:id="@+id/la_daily"-->
    <!--        android:layout_width="@dimen/_24sdp"-->
    <!--        android:layout_height="@dimen/_24sdp"-->
    <!--        app:lottie_autoPlay="true"-->
    <!--        app:lottie_loop="true"-->
    <!--        app:lottie_enableMergePathsForKitKatAndAbove="true"-->
    <!--        />-->

    <ImageView
        android:id="@+id/img_daily"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:scaleType="centerInside"

        />

    <com.example.weatherapp.widget.CustomTextviewMedium
        android:id="@+id/tv_day_daily"
        android:layout_width="@dimen/_34sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/rounded_white"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_10ssp" />

    <ImageView
        android:id="@+id/img_rain"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_12sdp" />


    <com.example.weatherapp.widget.CustomTextviewLight
        android:id="@+id/tv_rain_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@android:color/holo_blue_light" />


</LinearLayout>